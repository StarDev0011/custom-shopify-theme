/** Header	**/
  .site-header {
    --text: var(--header-text-color);
    --bg: var(--header-color);
  }

  .header__dropdown {
    --text: var(--header-text-color);
  }

  .site-header--transparent {
    background: transparent;
  }

  .site-header--transparent:not(.meganav--visible) {
    --text: var(--header-transparent-text-color);
  }
      
  @media only screen and (max-width: 479px) {
    .site-header--transparent:not(.meganav--visible) {
      --text: var(--header-mobile-transparent-text-color);
    }
  }


  header.meganav--visible.meganav--override {
    --text: var(--override-header-text-color);
    --bg: var(--override-header-bg);
  }
      
  header.meganav--visible.meganav--override .header__dropdown {
    --text: var(--override-header-text-color);
  }
      
  header.meganav--visible .logo__image {
    filter: var(--meganav-logo-color);
  } 
      
/** Mobile menu **/
  .drawer {
    --text: var(--header-text-color);
    --bg: var(--header-color);
  }

  .drawer__logo-image {
    max-height: 100% !important;
  }
  
  .drawer.is-open .drawer__logo-image {
    filter: var(--meganav-logo-color);
  }
      
  .drawer.meganav--override.is-open .drawer__logo-image {
    filter: var(--mobile-logo-color);
  }

