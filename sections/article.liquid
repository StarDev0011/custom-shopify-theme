        "type": "checkbox",
        "id": "show_date",
        "label": "Show date",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_author",
        "label": "Show author",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_tags",
        "label": "Show article tags",
        "default": true
      },
      {
        "type": "header",
        "content": "Share"
      },
      {
        "type": "checkbox",
        "id": "show_share_button",
        "label": "Show share button",
        "default": true
      },
      {
        "type": "text",
        "id": "text",
