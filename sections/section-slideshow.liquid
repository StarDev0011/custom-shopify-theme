    {
      "type": "checkbox",
      "id": "show_nav_dots",
      "label": "Show slide navigation dots",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_nav_arrows",
      "label": "Show slide navigation arrows",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_arrow_down",
      "label": "Show down arrow",
      "default": false
    },
    {
